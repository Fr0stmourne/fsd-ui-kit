      .container
        section.filter
          h2.filter__title.visually-hidden
          .filter__date-filter
            +date-filter({title: 'даты пребывания в отеле'})
          .filter__guests
            +dropdown({title: 'гости', id: 'guest-3',placeholder: 'Сколько гостей', optionsList: [{text: 'Взрослые', id: 'adult-1'},{text: 'Дети', id: 'children-1'},{text: 'Младенцы', id: 'baby-1', checked: true}]})
