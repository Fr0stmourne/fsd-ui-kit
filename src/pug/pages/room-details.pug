include ../components/headers-footers/headers.pug
include ../components/headers-footers/footers.pug
include ../components/form-elements/advantage/advantage.pug
include ../components/form-elements/comment/comment.pug
include ../components/form-elements/bullet-list/bullet-list.pug
include ../components/cards/booking/booking.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Room Details
    link(rel="shortcut icon", href="/assets/img/favicon.png", type="image/x-icon")
  body.room-details
    .wrapper
      +header({unlogged: true, regText: 'зарегистрироваться', loginText: 'войти',
      items: [{text: 'О нас', link: './mock'}, {text: 'Услуги', link: './mock', dropdown: [{text: 'Услуга', link: './mock'},{text: 'Услуга 2', link: './mock'},{text: 'Услуга 2', link: './mock'}]},
        {text: 'Вакансии', link: './mock'},{text: 'Новости', link: './mock'},
        {text: 'Соглашения', link: './mock', dropdown: [{text: 'Услуга', link: './mock'},{text: 'Услуга 2', link: './mock'},{text: 'Услуга 2', link: './mock'}]}]})
      main
        h2.room-details__title.visually-hidden Сведения о номере
        .room-photos
          .room-photos__photo-box
            img.room-photos__photo(src="/assets/img/details-1.jpg", alt="room-photo")
          .room-photos__photo-box
            img.room-photos__photo(src="/assets/img/details-2.jpg", alt="room-photo")
          .room-photos__photo-box
            img.room-photos__photo(src="/assets/img/details-3.jpg", alt="room-photo")
        .container
          .room-details__main
            .room-info
              section.room-info__info
                h2.room-info__title Сведения о номере
                .room-info__advantages
                  .room-info__advantage
                    +advantage({title: 'Комфорт', description: 'Шумопоглощающие стены', imgLink: "/assets/components/form-elements/advantage/emoji.svg"})
                  .room-info__advantage
                    +advantage({title: 'Удобство', description: 'Окно в каждой из спален', imgLink: "/assets/components/form-elements/advantage/city.svg"})
                  .room-info__advantage
                    +advantage({title: 'Уют', description: 'Номер оснащён камином', imgLink: "/assets/img/whatshot.svg"})
              section.room-info__impression
                h2.room-info__title Впечатления от номера
                .room-info__diagram
                  .room-info__canvas-box
                    canvas(id='doughnut-chart' width='120' height='120') 
                    span.room-info__canvas-text 260 
                      span голосов
                  ol.room-info__diagram-legend.diagram-legend
                    li.diagram-legend__item Великолепно
                    li.diagram-legend__item Хорошо
                    li.diagram-legend__item Удовлетворительно
                    li.diagram-legend__item Разочарован
            section.room-reviews
              .room-reviews__box
                h2.room-reviews__title Отзывы посетителей номера
                .room-reviews__reviews-num 2 отзыва
              .room-reviews__grid
                .room-review
                  +comment({src: "/assets/img/comment.jpg", activeLike: true, likes: 12, author: "Мурад Сарафанов", date: "5 дней назад", comment: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."})
                .room-review
                  +comment({src: "/assets/img/comment-1.jpg", likes: 2, author: "Патрисия Стёклышкова", date: "Неделю назад", comment: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"})
            section.room-restrictions
              .room-rules
                h2.room-rules__title Правила
                .room-rules__list
                  +bullet-list({items: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']})
              .room-cancel
                h2.room-cancel__title Отмена
                .room-cancel__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
          .room-details__booking
            +booking({num: '888', type: 'люкс', fullPrice: '38 081₽', start: {id: 'cards__start-1'}, end: {id: 'cards__end-1'}, price: '9 990₽', calc: [['9 990₽ х 4 суток', '39 960₽'], ['Сбор за услуги: скидка 2 179₽', '0₽', 'Инфо'], ['Сбор за дополнительные услуги', '300₽', 'Информация']]})

      +footer({extended: true,
      copyright: 'Copyright © 2018 Toxin отель. Все права зачищены.',
        socialList: [{name: 'Twitter', link: './mock', imgLink: '/assets/img/twitter.svg'},
        {name: 'Facebook', link: './mock', imgLink: '/assets/img/facebook.svg'},{name: 'Insta', link: './mock', imgLink: '/assets/img/insta.svg'}],
    sub: {title: 'Subscribe to our newsletter',
      text: 'Receive our latest news and promotions in your inbox!',
      placeholder: 'Your email address'},
        navLists: [{title: 'навигация',
        items: ['О нас', 'Новости', 'Служба поддержки', 'Услуги']},
          {title: 'о нас', 
          items: ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы']},
          {title: 'Служба поддержки', items: ['Соглашения', 'Сообщества', 'Связь с нами']}],
            sub: {title: 'Подписка', placeholder: 'Email', text: 'Получайте специальные предложения и новости сервиса'},
            companyText: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»'})
                
