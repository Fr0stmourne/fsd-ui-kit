include ../checkbox-buttons/checkbox.pug

mixin expandable-list(options)
  .expandable-list
    .expandable-list__title=options.title
    button.expandable-list__expand-btn.js-expandable-btn(id=options.btnId)
    ul.expandable-list__list.js-expandable(id=options.id)
      each val in options.list ? options.list : ['There are no values']
        li.expandable-list__checkbox
          +checkbox({labelText: val.labelText, checked: val.checked})