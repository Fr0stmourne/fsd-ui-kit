include ../buttons/buttons.pug

mixin header({items = ['There are no values'], unlogged = false, loginText = 'Войти', regText = 'Зарегистрироваться', username = 'Иван Иванов'} = {})
  header.main-header
    .container
      h1.visually-hidden Toxin
      a(href="#").main-header__logo-link
        .main-header__logo
          img(src="/logo.svg", alt="Logo")
        .main-header__name
          img(src="/toxin.svg", alt="Company TOXIN")
      div.main-header__menu
        nav.main-logo__nav.nav
          ul.main-logo__nav-list.nav__list
            each val in items
              li.nav__item(class=val.dropdown ? 'nav__item_dropdown' : '')
                a.nav__link(href=val.link class=val.active ? 'nav__link_active' : '')=val.text
                if val.dropdown
                  .nav__dropdown-content
                    each dropdownItem in val.dropdown.length ? val.dropdown : ['None']
                      a.nav__dropdown-link(href=dropdownItem.link)=dropdownItem.text              
        if unlogged
          .login-menu.main-logo__login
            .login-menu__login
              +button({btnText: loginText, type: 'secondary'})
            .login-menu__register
              +button({btnText: regText})
        else
          .main-logo__login.login-menu.login-menu_logged
            =username
