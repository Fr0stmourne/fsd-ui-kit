mixin datepicker({title, id, start, end} = {})
  .datepicker-single
    if title
      .datepicker-single__title=title
    input.datepicker-single__input(type="text" id=id placeholder="ДД.ММ.ГГГГ" class='datepicker-here')

mixin datepicker-double({ inline = false, startLabel = 'Приезд', endLabel = 'Выезд' } = {})
  .datepicker-double.js-range-datepicker(class = inline ? 'js-range-datepicker-inline' : '')
    .datepicker-double__start
      span.datepicker-double__label=startLabel
      .datepicker-double__box
        input.datepicker-double__input.js-range-datepicker-start(type="text" data-range="true" name=name data-multiple-dates-separator=" - " class="datepicker-here" placeholder="ДД.ММ.ГГГГ")
    .datepicker-double__end
      span.datepicker-double__label=endLabel
      .datepicker-double__box
        input.datepicker-double__input.js-range-datepicker-end(type="text" data-range="true" name=name data-multiple-dates-separator=" - " class="datepicker-here" placeholder="ДД.ММ.ГГГГ")
  

