include ../subscription/subscription.pug
include ../footer-nav/footer-nav.pug

mixin main-footer(options = {})
  -
    var { extended = false,
    title = "Page footer",
    logoLink = "landing-page.html", 
    companyText = "Текст о компании", 
    navigationLists = ["There are no values"], 
    copyright = "Копирайт", 
    socialList = ["None"], 
    subscription = {title:"Подписка", text: "Текст подписки", placeholder: "Заглушка"} } = options
  footer.main-footer
    h2.main-footer__title=title
    if extended
      .main-footer__container
        .main-footer__main
          .main-footer__company
              a(href=logoLink).main-footer__company-logos
                .main-footer__company-logo
                  img(src="logo.svg", alt="Logo")
                .main-footer__company-name
                  img(src="toxin.svg", alt="Company TOXIN")
              .main-footer__company-text=companyText
          .main-footer__menu
            each navigation in navigationLists
              nav.main-footer__nav
                +footer-nav({ navigation })
            form.main-footer__subscription
                h3.main-footer__subscription-title=subscription.title
                .main-footer__subscription-text=subscription.text
                .main-footer__subscription-input
                  +subscription({placeholder: subscription.placeholder})
      .main-footer__outer-wrapper
        .main-footer__container.main-footer__container_with-border
          .main-footer__bottom
              .main-footer__copyright=copyright
              ul.main-footer__social
                each social in socialList
                  li.main-footer__social-item
                    a.main-footer__social-link(href=social.link target="_blank" rel="noopener noreferrer")
                      img.main-footer__social-img(src=social.imageLink, alt=social.name)
                      span.main-footer__social-name=social.name
    else
      .main-footer__container
        .main-footer__main.main-footer__main_small
          a(href=logoLink).main-footer__company-logos
            .main-footer__company-logo
              img(src="logo.svg", alt="Logo")
            .main-footer__company-name
              img(src="toxin.svg", alt="Company TOXIN")
          .main-footer__company-text=companyText
          ul.main-footer__social
            each social in socialList
              li.main-footer__social-item
                a.main-footer__social-link(href=social.link target="_blank" rel="noopener noreferrer")
                  img.main-footer__social-img(src=social.imageLink, alt=social.name)
                  span.main-footer__social-name=social.name

