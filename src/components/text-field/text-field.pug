mixin text-field(options = {})
  -
    var {
      title,
      placeholder="Введите что-то...",
      className="",
      type="text",
      arialabel
    } = options
  .text-field
    if title
      .text-field__title=title
    input.text-field__input(type=type class=className name=name placeholder=placeholder aria-labelledby=arialabel)
