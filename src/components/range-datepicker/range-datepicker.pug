mixin range-datepicker(options = {})
  -
    var {
      inline=false,
      startLabel="Приезд",
      endLabel="Выезд"
    } = options
  .range-datepicker(class = inline ? "range-datepicker_inlined js-range-datepicker-inline" : "js-range-datepicker")
    .range-datepicker__start
      label.range-datepicker__label=startLabel
      .range-datepicker__box
        input.range-datepicker__input.range-datepicker__input_start(type="text" data-range="true" readonly name=name data-multiple-dates-separator=" - " placeholder="ДД.ММ.ГГГГ")
    .range-datepicker__end
      label.range-datepicker__label=endLabel
      .range-datepicker__box
        input.range-datepicker__input.range-datepicker__input_end(type="text" data-range="true" readonly name=name data-multiple-dates-separator=" - " placeholder="ДД.ММ.ГГГГ")
  

