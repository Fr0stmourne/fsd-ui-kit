mixin advantage(options = {})
  -
    var {
      imageLink="./mock",
      alt="Преимущество",
      title="Преимущество",
      description="Описание преимущества",
      imageType=""
    } = options
  .advantage
    img.advantage__image(src=imageLink, alt=alt, class=`advantage__image_type_${imageType}`)
    .advantage__text
      span.advantage__title=title
      span.advantage__description=description