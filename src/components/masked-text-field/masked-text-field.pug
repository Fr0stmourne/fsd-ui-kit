include ../text-field/text-field.pug

mixin masked-text-field(options = {})
  -
    var {
      title,
      name,
      placeholder="Дата",
      arialabel
    } = options
  label.masked-text-field
    if title
      .masked-text-field__title=title
    +text-field({ className: "js-date", placeholder: "ДД.ММ.ГГГГ", arialabel})
