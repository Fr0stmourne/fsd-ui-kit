include ../like-button/like-button.pug

mixin comment(options = {})
  -
    var {
      src="./mock",
      author="Автор",
      date="31.12.2020",
      likes=5,
      activeLike=false,
      comment="Комментарий"
    } = options
  .comment
    .comment__information
      img.comment__photo(src=src, alt="Фото автора комментария")
      .comment__author=author
      .comment__date=date
    .comment__box
      .comment__like
        +like-button({likes: likes, active: activeLike})
      blockquote.comment__text=comment


