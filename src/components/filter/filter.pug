include ../date-filter/date-filter.pug
include ../dropdown/dropdown.pug
include ../range-slider/range-slider.pug
include ../checkbox/checkbox.pug
include ../rich-checkbox/rich-checkbox.pug
include ../expandable-list/expandable-list.pug

mixin filter()  
  section.filter
    h2.filter__main-title Фильтр комнат
    .filter__date-filter
      +date-filter({title: "даты пребывания в отеле"})
    .filter__guests
      +dropdown({
        title: "гости",
        controls: true,
        id: "search-room-dropdown",
        placeholder: "Сколько гостей",
        optionsList: [{
          text: "Взрослые",
          wordForms: "гость гостя гостей",
          group: 1
        }, {
          text: "Дети",
          wordForms: "гость гостя гостей",
          group: 1
        }, {
          text: "Младенцы",
          wordForms: "младенец младенца младенцев"
        }]
      })
    .filter__slider
      +range-slider({
        title: "диапазон цены", 
        id: "search-room-slider"
      })
      .filter__slider-hint Стоимость за сутки пребывания в номере
    .filter__checkbox-group
      .filter__checkbox-title Checkbox Buttons
      .filter__checkbox
        +checkbox({labelText: "Можно курить"})
      .filter__checkbox
        +checkbox({labelText: "Можно с питомцами"})
      .filter__checkbox
        +checkbox({labelText: "Можно пригласить гостей (до 10 человек)"})
    .filter__ally
      .filter__ally-title доступность
      .filter__rich-checkboxes 
        .filter__rich-checkbox
          +rich-checkbox({
            labelText: "Широкий коридор", 
            description: "Ширина коридоров в номере не менее 91 см."
          })
        .filter__rich-checkbox
          +rich-checkbox({
            labelText: "Помощник для инвалидов", 
            description: "На 1 этаже вас встретит специалист  и проводит до номера.",
            wide: true
          })
    .filter__comfort
      +dropdown({
        title: "Удобства номера",
        id: "search-room-dropdown-1",
        placeholder: "Комнаты",
        optionsList: [{
          text: "Спальни",
          wordForms: "спальня спальни спален"
        }, {
          text: "Кровати",
          wordForms: "кровать кровати кроватей"
        }, {
          text: "Ванные комнаты",
          wordForms: "ванная ванные ванных"
        }]
      })
    .filter__additional
      +expandable-list({
        id: "expandable",
        btnId: "expandable-btn",
        title: "дополнительные удобства",
        list: [{
          labelText: "Завтрак"
        }, {
          labelText: "Письменный стол",
          checked: true
        }, {
          labelText: "Стул для кормления",
          checked: true
        }, {
          labelText: "Кроватка",
          checked: true
        }, {
          labelText: "Телевизор"
        }, {
          labelText: "Шампунь"
        }, {
          labelText: "Телевизор"
        }, {
          labelText: "Шампунь"
        }]
      })