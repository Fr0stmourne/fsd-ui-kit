include ../../components/rich-checkbox/rich-checkbox.pug
include ../../components/date-filter/date-filter.pug
include ../../components/dropdown/dropdown.pug
include ../../components/pagination/pagination.pug

block meta
  meta(name="description", content="search room")
  meta(name="keywords", content="search, rooms, room")

block title
  title Search room

block content
  body.search-room
    .search-room__wrapper
      .search-room__header
        +toxin-header()
      main.search-room__main
        .search-room__container
          .search-room__filter
            section.filter
              h2.filter__title.visually-hidden Фильтр комнат
              .filter__date-filter
                +date-filter({title: 'даты пребывания в отеле'})
              .filter__guests
                +dropdown({
                  title: 'гости',
                  controls: true,
                  id: 'search-room-dropdown',
                  placeholder: 'Сколько гостей',
                  optionsList: [{
                    text: 'Взрослые',
                    wordForms: 'гость гостя гостей',
                    group: 1
                  }, {
                    text: 'Дети',
                    wordForms: 'гость гостя гостей',
                    group: 1
                  }, {
                    text: 'Младенцы',
                    wordForms: 'младенец младенца младенцев'
                  }]
                })
              .filter__slider
                +range-slider({
                  title: 'диапазон цены', 
                  id: 'search-room-slider'
                })
                .filter__slider-hint Стоимость за сутки пребывания в номере
              .filter__checkbox-group
                .form-element__title Checkbox Buttons
                .filter__checkbox
                  +checkbox({labelText: "Можно курить"})
                .filter__checkbox
                  +checkbox({labelText: "Можно с питомцами"})
                .filter__checkbox
                  +checkbox({labelText: "Можно пригласить гостей (до 10 человек)"})
              .filter__ally
                .form-element__title доступность
                .filter__rich-checkboxes 
                  .filter__rich-checkbox
                    +rich-checkbox({
                      labelText: 'Широкий коридор', 
                      description: 'Ширина коридоров в номере не менее 91 см.'
                    })
                  .filter__rich-checkbox
                    +rich-checkbox({
                      labelText: 'Помощник для инвалидов', 
                      description: 'На 1 этаже вас встретит специалист  и проводит до номера.'
                    })
              .filter__comfort
                +dropdown({
                  title: 'Удобства номера',
                  id: 'search-room-dropdown-1',
                  placeholder: 'Комнаты',
                  optionsList: [{
                    text: 'Спальни',
                    wordForms: 'спальня спальни спален'
                  }, {
                    text: 'Кровати',
                    wordForms: 'кровать кровати кроватей'
                  }, {
                    text: 'Ванные комнаты',
                    wordForms: 'ванная ванные ванных'
                  }]
                })
              .filter__additional
