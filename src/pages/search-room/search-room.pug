                +room({num: '888',checkedRating: 5, isRatingDisabled: true, sliderImgs: ['/1.jpg','/1.jpg' ,'/2.jpg', '/1.jpg'], link: './mock',  reviewNum: 145, type: 'люкс', price: '9 990₽' })
