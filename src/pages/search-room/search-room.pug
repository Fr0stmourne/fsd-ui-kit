<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Search room
    link(rel="shortcut icon", href="/favicon.png", type="image/x-icon")
  body.search-room
    .wrapper
      +header({unlogged: true, regText: 'зарегистрироваться', loginText: 'войти',
      items: [{text: 'О нас', link: './mock'}, {text: 'Услуги', link: './mock', dropdown: [{text: 'Услуга', link: './mock'},{text: 'Услуга 2', link: './mock'},{text: 'Услуга 2', link: './mock'}]},
        {text: 'Вакансии', link: './mock'},{text: 'Новости', link: './mock'},
