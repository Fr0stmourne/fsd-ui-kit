extends ../template-page/template-page.pug

include ../../components/toxin-header/toxin-header.pug
include ../../components/toxin-footer/toxin-footer.pug
include ../../components/find-room/find-room.pug

block meta
  meta(name="description", content="landing page")
  meta(name="keywords", content="landing, toxin, company")

block title
  title Landing page

block content
  body.landing-page
    .landing-page__wrapper
      +toxin-header()
      main.landing-page__main
        .landing-page__room-booking
          section.room-booking
            .room-booking__container
              h2.room-booking__title.visually-hidden Бронирование комнат
              .room-booking__form
                +find-room({
                  title: 'Найдём номера под ваши пожелания', 
                  start: {id: 'cards__start'}, 
                  end: {id: 'cards__end'}
                })
              .room-booking__note Лучшие номера для вашей работы, отдыха и просто вдохновения
      +toxin-footer()
    